{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sports Betting Historical Game Data",
  "type": "object",
  "properties": {
    "date": {"type": "string","pattern": "^(\\d{4})-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01])$"},
    "team_1": {"type": "string","minLength": 1},
    "team_2": {"type": "string","minLength": 1},
    "score_1": {"type": "integer","minimum": 0},
    "score_2": {"type": "integer","minimum": 0},
    "odds_open_team_1": {"type": "number","exclusiveMinimum": 1.0},
    "odds_open_team_2": {"type": "number","exclusiveMinimum": 1.0},
    "odds_close_team_1": {"type": "number","exclusiveMinimum": 1.0},
    "odds_close_team_2": {"type": "number","exclusiveMinimum": 1.0},
    "line_movement": {"type": "number","minimum": 0},
    "outcome": {"type": "integer","enum": [0,1]},
    "injuries": {"type": ["string","null"]},
    "weather_summary": {"type": ["string","null"]},
    "venue": {"type": ["string","null"]},
    "referee_id": {"type": ["string","null"]}
  },
  "required": [
    "date","team_1","team_2","score_1","score_2",
    "odds_open_team_1","odds_open_team_2",
    "odds_close_team_1","odds_close_team_2",
    "line_movement","outcome"
  ],
  "additionalProperties": false
}